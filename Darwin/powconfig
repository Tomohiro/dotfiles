export HOME=/Users/tomohiro

# Support rbenv Troubleshooting · basecamp/pow Wiki
# https://github.com/basecamp/pow/wiki/Troubleshooting
export PATH="$HOME/.rbenv/shims:$HOME/.rbenv/bin:/usr/local/bin:$PATH"

# Running Pow with Apache · basecamp/pow Wiki
# https://github.com/basecamp/pow/wiki/Running-Pow-with-Apache
export POW_DST_PORT=88

# ruby on rails 4 - How to use Byebug with a remote process (e.g., pow) - Stack Overflow
# http://stackoverflow.com/questions/22794176/how-to-use-byebug-with-a-remote-process-e-g-pow
export RUBY_DEBUG_PORT=4000
