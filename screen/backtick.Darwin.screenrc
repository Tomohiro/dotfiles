# screen blanker
#idle 3600
#blankerprg fortune

# backtick
backtick 0 0 90 head -n 1 /tmp/popmail
backtick 1 0 90 head -n 2 /tmp/popmail
#backtick 3 0 90 more /tmp/mixi_unread_count

# caption and hardstatus settings
caption always " %-w%{= rw} %n %t %{-}%+w %= %l"
hardstatus alwayslastline "%{= mw} POP3 ✉ %0` %{= km}⮀%{= kW} %1` %= "
